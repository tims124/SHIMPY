<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".EarlyMortality"
    tools:showIn="@layout/activity_early_mortality">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ems"
        android:contentDescription="@string/ems_photo" />

    <TextView
        android:id="@+id/description_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description_white_spots"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/description1" />

    <TextView
        android:id="@+id/space"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/diagnosis_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diagnosis"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/diagnosis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/diagnosis1" />

    <TextView
        android:id="@+id/space2"
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/treatment_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/treatment"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/treatment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/treatment1"/>

    <TextView
        android:id="@+id/space3"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


    <TextView
        android:id="@+id/prevention_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/prevention"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention1" />

    <TextView
        android:id="@+id/prevention2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention2"/>

    <TextView
        android:id="@+id/space4"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/prevention3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention3"/>

    <TextView
        android:id="@+id/space5"
        android:layout_width="match_parent"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/prevention4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention4"/>

    <TextView
        android:id="@+id/prevention5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/prevention5"/>


</LinearLayout>
